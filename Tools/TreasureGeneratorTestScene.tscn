[sub_resource type="GDScript" id=1]
script/source = "extends CenterContainer

var rng

func _ready() -> void:
	rng = RandomNumberGenerator.new()
	rng.randomize()


func n() -> void:
	for c in $\"%GridContainer\".get_children():
		c.free()
	
	var cfg = {}
	if $\"%CheckBox\".pressed:
		cfg.super_value = true
	
	var t = load(\"res://Scripts/TreasureGenerator.gd\").new().generate_treasure($\"%SpinBox\".value, rng, cfg)
	
	for item in t:
		var h = HBoxContainer.new()
		
		var tr = TextureRect.new()
		tr.texture = Utils.get_item_icon(item.id, item.get(\"data\"))
		tr.tooltip_text = str(item)
		h.add_child(tr)
		
		var l = Label.new()
		l.text = str(item.amount)
		h.add_child(l)
		
		$\"%GridContainer\".add_child(h)
"

