script/source = "extends PlayerDetector

@onready var sprite := $Sprite2D
@onready var particles := $GPUParticles2D
@onready var timer := $Timer

signal goal_entered
signal goal_failed

@export var visited: int

@export var index: int
@export var message: String

var disabled: bool
var timer_active: bool

func enter(player) -> void:
	if disabled:
		return
	
	if not visited:
		Save.count_score(\"goals_reached\")
		visited = true
	
	emit_signal(\"goal_entered\")

func destroy():
	var pos = particles.global_position
	remove_child(particles)
	Utils.game.map.add_child(particles)
	particles.global_position = pos
	particles.emitting = false
	get_tree().create_timer(particles.lifetime * 2, false).connect(\"timeout\", Callable(particles, \"queue_free\"))
	queue_free()

func set_current_goal(idx: int):
	set_disabled(index != idx)
	if idx == index and timer_active:
		timer.start()
	elif idx != index and not timer.is_stopped():
		timer.stop()

func set_disabled(dis: bool):
	visible = not dis
	disabled = dis

func set_time(time: float):
	if time == 0:
		return
	
	$Timer.wait_time = time
	timer_active = true

func time_up() -> void:
	emit_signal(\"goal_failed\")
"

