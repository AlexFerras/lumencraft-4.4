script/source = "extends \"res://Nodes/Player/Weapons/Ranged/PlayerBullet.gd\"

var life_time: float
var dead = false

func _ready() -> void:
	Utils.play_sample(Utils.random_sound(\"res://SFX/Weapons/gun_pistol_shot_silenced\"), self)

func _physics_process(delta: float) -> void:
	if dead:
		return
	
	var ray := Utils.game.map.pixel_map.rayCastQTDistance(global_position,  dir, speed * delta, Player.get_weapon_mask(get_meta(\"data\")))
	if ray:
		life_time = 10 # end of the life
		dead = true
		global_position = ray.hit_position
	else:
		global_position += dir * speed * delta
	
	life_time += delta
	if life_time >= 0.3:
		queue_free()
"

