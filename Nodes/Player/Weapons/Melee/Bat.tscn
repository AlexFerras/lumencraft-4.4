script/source = "extends \"res://Nodes/Player/Weapons/Melee/MeleeWeapon.gd\"

signal attacked

@onready var animator := $AnimationPlayer as AnimationPlayer
@onready var collider := $Node2D/Area2D/CollisionShape2D as CollisionShape2D

var next_attack: bool
var back: bool
var end: float = -1

func _ready() -> void:
	init(Const.ItemIDs.BAT, $Node2D/Area2D)
	if is_attacking_on_start:
		do_next_attack()

func _process(delta: float) -> void:
	if is_player_melee_attacking():
		if end > 0 or animator.current_animation == \"PutAway\":
			do_next_attack()
		else:
			next_attack = true
	
	if end > 0:
		end += delta
		if end >= 0.5:
			put_away()

func _on_AnimationPlayer_animation_finished(anim_name: String) -> void:
	if next_attack:
		do_next_attack()
	else:
		end = 0.1
		collider.disabled = true

func do_next_attack():
	use_stamina()
	
	end = -1
	collider.disabled = false
	next_attack = false
	
	if back:
		animator.play_backwards(\"Attack\")
	else:
		animator.play(\"Attack\")
	back = not back

func put_away():
	animator.play(\"PutAway\")
	collider.disabled = true
	back = false

func on_hit():
	pass
"

