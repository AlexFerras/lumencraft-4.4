script/source = "extends CanvasLayer

func _ready() -> void:
	var frogs = Save.player_data.set_frog_found(Save.current_map)
	$Label.text = tr($Label.text) % [frogs, Const.FROG_MAPS.size()]
	if frogs == Const.FROG_MAPS.size():
		SteamAPI.unlock_achievement(\"WEDNESDAY\")
	$Label.pivot_offset = $Label.size / 2

func _on_AnimationPlayer_animation_finished(anim_name: String) -> void:
	queue_free()
"

