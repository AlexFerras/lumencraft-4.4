script/source = "extends Area2D


@onready var particles := $GPUParticles2D as GPUParticles2D
#onready var particles := $Particles2D2 as CPUParticles2D
var ticks: int

func _ready() -> void:
	$Particles2D2.queue_free()
	Utils.init_enemy_projectile(self, self, {damage = 1, keep = true})
	$Sprite2D.rotation = randf() * TAU
	$Sprite2D.flip_h = randi() % 2
	$Sprite2D.flip_v = randi() % 2


func tick() -> void:
	ticks += 1

	if ticks == 1:
		particles.emitting = true
	if ticks == 3:
		particles.emitting = false
		
	elif ticks == 10:
		queue_free()
	

"

