script/source = "extends WalkingEnemy

var last_goo: Vector2
var start_angle: float

func global_state(delta: float):
	super.global_state(delta)
	if global_position.distance_squared_to(last_goo) > 64:
		last_goo = global_position
		var goo := preload(\"res://Nodes/Enemies/Projectiles/ToxicGoo.tscn\").instantiate() as Node2D
		Utils.game.map.add_child(goo)
		goo.global_position = global_position

func goto_target(delta: float):
	if not validate_target():
		set_state(\"look_for_target\")
		return
	
	if not path:
		search_path_to_target()
		return
	
	follow_path()
	
	if timer >= 1:
		timer = 0
		path.clear()
	
	if is_near_target(50):
		start_angle = target.global_position.direction_to(global_position).angle()
		set_state(\"surround_target\")

func surround_target(delta: float):
	if not validate_target():
		set_state(\"look_for_target\")
		return
	
	if not is_near_target(60):
		set_state(\"goto_target\")
		return
	
	if timer >= TAU / 2.5:
		timer -= TAU / 2.5
		start_angle += PI/2
	
	velocity += seek(global_position, target.global_position + Vector2.RIGHT.rotated(start_angle + timer * 5) * 40)
	velocity += collision_avoidance() * 7.0 + update_avoid_others_in_range(avoid_range) * 0.5
"

