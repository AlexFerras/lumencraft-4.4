script/source = "extends \"res://Nodes/Player/Weapons/Ranged/PlayerBullet.gd\"

var pierce: int
var damage: int =2
var antiair=0

func _physics_process(delta: float) -> void:
	var ray := Utils.game.map.pixel_map.rayCastQTDistance(global_position,  dir, speed * delta, Utils.turret_bullet_collision_mask, true)
	if ray:
		global_position = ray.hit_position 
		Utils.explode_circle(ray.hit_position, 4, 400, 5, 6)
		Utils.play_sample(Utils.get_material_hit_sound(ray.hit_position ), self)
		destroy(false)
	else:
		var dist=speed * delta
		distance_traveled+=dist
		if distance_traveled>=max_distance:
			Utils.get_audio_manager(\"bullet_hit_dirt\").play(global_position)
			destroy(false)
		else:
			position += dir * dist

func on_hit():
	super.on_hit()
	pierce -= 1
	get_meta(\"data\").keep = pierce > 0

func get_damage_data() -> Dictionary:
	return {damage = damage, aspect = Const.Aspects.WEAK, antiair=antiair, good = true, keep = pierce > 0, damage_timeout=2000}
"

