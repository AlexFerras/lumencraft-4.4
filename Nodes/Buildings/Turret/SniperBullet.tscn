script/source = "extends \"res://Nodes/Player/Weapons/Ranged/PlayerBullet.gd\"

var pierce: int
var damage=30


func _ready():
	if damage>100:
		$bullet.modulate=Color(30,1,0)

func _physics_process(delta: float) -> void:
	var ray := Utils.game.map.pixel_map.rayCastQTFromTo(global_position,  global_position + dir * speed * delta, Utils.turret_bullet_collision_mask, true)
	if ray:
		global_position = ray.hit_position 
		Utils.explode_circle(ray.hit_position , 6, 400, 5, 6)
		Utils.play_sample(Utils.get_material_hit_sound(ray.hit_position ), self)
		destroy(false)
	else:
		var dist=speed * delta
		distance_traveled+=dist
		if distance_traveled>=max_distance:
			Utils.get_audio_manager(\"bullet_hit_dirt\").play(global_position)
			destroy(false)
		else:
			position += dir * dist

func get_damage_data() -> Dictionary:
	return {damage = damage, good = true, keep = pierce > 0,critical=damage>100}



func on_hit():
	super.on_hit()
	pierce -= 1
	get_meta(\"data\").keep = pierce > 0

