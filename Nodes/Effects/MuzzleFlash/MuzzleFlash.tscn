@onready var animator := $AnimationPlayer as AnimationPlayer

func _ready() -> void:
	hide()

func shoot(once: bool):
	if once:
		animator.playback_speed = 1
		animator.play(\"ShootOnce\")
	else:
		animator.playback_speed = 2
		animator.play(\"Shoot\")

func stop():
	animator.stop()
	hide()
"

